    <!--分割线-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="#898888" />

    <!--按钮布局-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y27"
        android:orientation="horizontal"
        android:background="#dcdcdc"
        >
        <!--开始按钮-->
        <ImageButton
            android:id="@+id/btnStart"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_start_normal"/>
        <ImageButton
            android:id="@+id/btn_GeneratReport"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_create_normal"/>
        <ImageButton
            android:id="@+id/btn_ExportData"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_export_normal"/>
        <!-- 停止按钮-->
        <ImageButton
            android:id="@+id/btnStop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/btn_stop_normal"/>
        <!--清屏按钮-->
        <ImageButton
            android:id="@+id/btnClean"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#dcdcdc"
            android:scaleType="fitCenter"
            android:visibility="gone"
            android:src="@drawable/btn_clean_normal"/>
    </LinearLayout>

</LinearLayout>
